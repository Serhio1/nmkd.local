{% extends 'base.html.twig' %}

{% block main %}

    
    {% block hint %}
    {% for hint in hints %}
    <div class="alert alert-info">
		<button type="button" class="close" data-dismiss="alert">&times;</button>
        {% block hintText %}
			{{hint}}
        {% endblock hintText %}
    </div>
    {% endfor %}
    {% endblock hint %}

    {% block errors %}
    {% for error in errors %}
        <div class="alert alert-danger">
			<button type="button" class="close" data-dismiss="alert">&times;</button>
            {{error}}
        </div>
        
    {% endfor %}
    {% endblock errors %}

    {% block mainForm %}
    {% endblock mainForm %}



    
    

    {% block controls %}
    <div class="nmkd-controls">
    
        {% block prevBtn %}
        <button type="button" id="prevBtn" class="btn btn-default">
            <span class="glyphicon glyphicon-circle-arrow-left"></span> Повернутись
        </button>
        {% endblock prevBtn %}
    
        {% block saveSessionBtn %}
        <!--<button type="button" class="btn btn-default" onclick="var url = document.location.href;
                                                           url = url.replace('-','_');
                                                           var str = '/save-session/'+url.split('/')[3];
                                                           document.location.href = str;">
            <span class="glyphicon glyphicon-floppy-disk"></span> Зберегти і вийти
        </button>-->
        {% endblock saveSessionBtn %}

        {% block uploadFileBtn %}
        {% endblock uploadFileBtn %}

        {% block nextBtn %}
        <div class="nmkd-next-btn">
            <button type="button" id="nextBtn" class="btn btn-success">
                <span class="glyphicon glyphicon-circle-arrow-right"></span> Далі
            </button>
        </div>
        {% endblock nextBtn %}

    </div>
    {% endblock controls %}


{% endblock main %}

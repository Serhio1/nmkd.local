{% extends 'base.html.twig' %}

{% block main %}



<div class="page-header">
  <h1>Вітаємо в АІАС НМЗД! <small>Для початку роботи оберіть дисципліну</small></h1>
</div>

<ul id="menu" class="list-group" style="list-style-type:none">
{% for row in disciplines %}
    <li id="item{{row.id}}" class="list-group-item">{{row.name}}</li>
    {% for option in discipline_options[row.id] %}
        <a class="list-group-item submenu item{{row.id}} {{ option.classes }}" href="{{ option.url }}">
            <span class="glyphicon {{ option.icon }}"></span> &nbsp;&nbsp;&nbsp;&nbsp;{{ option.title }}
        </a>
    {% endfor %}
{% endfor %}
</ul>

<script>
$(function(){$('#menu .submenu').css('display','none');});
$('#menu').on('click','li',function(){
    submenuClass = $(this).attr('id');
    $('.'+submenuClass).slideToggle(300);
    $(this).toggleClass('active');
});
</script>



                    text-align:left;
                    padding:4px;
                    font-size:12pt;
                    font-family:Times New Roman;
                }
                .table th {
                    font-weight:bold;
                }
                .table td {
                    font-weight:normal;
                }
                
                .table tr:last-child td{
                    border-width:0px 1px 0px 0px;
                }
                .table tr td:last-child{
                    border-width:0px 0px 1px 0px;
                }
                .table tr:last-child td:last-child{
                    border-width:0px 0px 0px 0px;
                }
</style>
